<!DOCTYPE html>
<head>
    <title>Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/app.css"/>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    {{> facebook}}
    <script src="/js/account.js"></script>
</head>
<body>
    <div class="container top-containers">
        <h1 class="nav-title">Home</h1>
        <a onclick="facebookLogout()"><img class="icon-profile account-logout" src="images/logout.png"/></a>
    </div>
    <div class="outer-container">
        <div class="container">
            
            <!-- My Fridge -->

            <div class="row home-title-row">
                <div class="col-xs-7">
                    <h2 class="home-title">My Fridge</h2>
                </div>
                <div class="col-xs-5">
                    <a href="add-ingredients">
                        <div class="home-plus-button">+ Add Food</div>
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="home-fridge-container">
                        <h4 class="home-freshness home-freshness-1">
                            Eat Soon
                        </h4>
                        {{#each_upto ingredients_soon 2}}
                        <div class="row home-freshness-row">
                            <div class="home-freshness-col-1 col-xs-2">
                                <img class="icon" src="{{imageURL}}"/>
                            </div>
                            <div class="home-freshness-col-2 col-xs-5">
                                {{name}}
                            </div>
                            <div class="home-freshness-col-3 col-xs-5">
                                x {{quantity}}
                            </div>
                        </div>
                        {{/each_upto}}
                        <div class="row home-freshness-row graytext">
                            ... {{math ingredients_soon.length "-" 2}} more items
                        </div>
                        <h4 class="home-freshness home-freshness-2">
                            Okay
                        </h4>
                        {{#each_upto ingredients_ok 2}}
                        <div class="row home-freshness-row">
                            <div class="home-freshness-col-1 col-xs-2">
                                <img class="icon" src="{{this.imageURL}}"/>
                            </div>
                            <div class="home-freshness-col-2 col-xs-5">
                                {{this.name}}
                            </div>
                            <div class="home-freshness-col-3 col-xs-5">
                                x {{this.quantity}}
                            </div>
                        </div>
                        {{/each_upto}}
                        <div class="row home-freshness-row graytext">
                            ... {{math ingredients_ok.length "-" 2}} more items
                        </div>
                        <h4 class="home-freshness home-freshness-3">
                            Fresh
                        </h4>
                        {{#each_upto ingredients_fresh 2}}
                        <div class="row home-freshness-row">
                            <div class="home-freshness-col-1 col-xs-2">
                                <img class="icon" src="{{this.imageURL}}"/>
                            </div>
                            <div class="home-freshness-col-2 col-xs-5">
                                {{this.name}}
                            </div>
                            <div class="home-freshness-col-3 col-xs-5">
                                x {{this.quantity}}
                            </div>
                        </div>
                        {{/each_upto}}
                        <div class="row home-freshness-row graytext">
                            ... {{math ingredients_ok.length "-" 2}} more items
                        </div>
                    </div>
                </div>
            </div>
            <div class="row ">
                <a href="view-all-ingredients">
                    <div class="col-xs-12 home-view-more">View More ></div>
                </a>
            </div>

            <!-- My Recipes -->

            <div class="row home-title-row">
                <div class="col-xs-7">
                    <h2 class="home-title">Recipes</h2>
                </div>
                <div class="col-xs-5">
                    <a href="add-recipe">
                        <div class="home-plus-button">+ New Recipe</div>
                    </a>
                </div>
            </div>
            <div class="row">
                {{#each_upto recipes 4}}
                <div class="col-xs-6 home-recipe-card">
                    <a href="">
                        <div class="home-recipe-card-inner">
                            <div class="home-recipe-card-inner-image"><img src="{{imageURL}}" alt="recipe"></div>
                            <div class="home-recipe-card-inner-text">{{name}}</div>
                        </div>
                    </a>
                </div>
                {{/each_upto}}
            </div>
