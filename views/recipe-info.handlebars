<!DOCTYPE html>
<head>
  {{> analytics}}
  <title>{{name}}</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/app.css"/>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <script src="/js/goBack.js"></script>
  <script src="/js/fav-recipe.js"></script>
</head>
<body class="recipe-ind-body">
  {{> navbottom}}
<div class="container top-containers">
  <div class="row">
    <a onclick="goBack()">
      <div class="col col-xs-2">
        <p class="back">&lt;</p>
      </div>
    </a>
    <div class="col col-xs-8">
      <h1 id="recipe-name">Recipe Info</h1>
    </div>
    <div class="col col-xs-2 done-col">
    </div>
  </div>
</div>
<input type="hidden" value="{{id}}" id='id_stats'>
<input type="hidden" value={{fav}} id='fav_stats'>
<div class="recipe-info-recipe-bgc">
  <img class="img-recipe-info" src="{{imageURL}}"/>
</div>
<div class="container recipe-intro-container">
  <div class="row">
    <div class="col col-xs-12">
      <h1 class="recipe-info-name">{{name}}</h1>
    </div>
  </div>
  <br><br>
  <div class="row">
    <div class="col col-xs-6 recipe-info-recipe-details-x">
      Cooking Time: 
      <p class="recipe-time">{{cookingTime}} Minutes</p>
    </div>
    <div class="col col-xs-6 recipe-info-recipe-details-x">
      Serving size: 
      <p class="serving-size">{{servingSize}}</p>
    </div>
  </div>
</div>
<br><br>
<div class="container">
  <div class="row">
    <div class="col col-xs-3"></div>
    <div class="col col-xs-6 hr-line"></div>
    <div class="col col-xs-3"></div>
  </div>
</div>
<h2 id="recipe-info-header">Ingredients</h2>
  {{#each recipeIngredients}}
  <div class="container recipe-body-container recipe-ing-container">
    <input type="checkbox">{{this}}
  </div>
  {{/each}}
<br><br>
<div class="container">
  <div class="row">
    <div class="col col-xs-3"></div>
    <div class="col col-xs-6 hr-line"></div>
    <div class="col col-xs-3"></div>
  </div>
</div>
<h2 id="recipe-info-header">Cooking Instructions</h2>
<div class="container recipe-body-container">
  <p><ol>
    {{#each steps}}<li class="recipe-inst">{{this}}</li><hr>{{/each}}
  </ol></p>
</div>
<div></div>
<div class="container">
  <br><br>
  <div class="row">
    <div class="col-xs-2"></div>
     <div class="col-xs-8">
        <div id="rcp-fav"><img src='/images/fav-button-pink.png' width='20px'><br>Add to Favorites</div>
      </div>
      <div class="col-xs-2"></div>
  </div>
  <br><br>
</div>
<a href="/view-all-recipes">
  <div class="row add-recipe-create">Finish</div>
</a>
<div class="edit-recipe-button-container">
  {{!--   <a href="edit-recipe">
  <button id="edit-recipe-button">Edit Recipe</button>
  </a> --}}
</div>
</body>
</html>